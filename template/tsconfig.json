{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "lib": [
      "es2017"
    ],
    "module": "NodeNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["examples/*", "src/*", "debug/*", "generated/*"],
      "@root/*": ["./*"],
      "@components/*": ["examples/components/*", "src/components/*", "debug/components/*", "generated/components/*", "internal/components/*", "global/components/*"],
      "@screens/*": ["examples/screens/*", "src/screens/*", "debug/screens/*", "generated/screens/*", "internal/screens/*", "global/screens/*"],
      "@stores/*": ["examples/stores/*", "src/stores/*", "debug/stores/*", "generated/stores/*", "internal/stores/*", "global/stores/*"],
      "@theme/*": ["examples/theme/*", "src/theme/*", "debug/theme/*", "generated/theme/*", "internal/theme/*", "global/theme/*"],
      "@constants/*": ["examples/constants/*", "src/constants/*", "debug/constants/*", "generated/constants/*", "internal/constants/*", "global/constants/*"],
      "@navigation/*": ["examples/navigation/*", "src/navigation/*", "debug/navigation/*", "generated/navigation/*", "internal/navigation/*", "global/navigation/*"],
      "@schemas/*": ["examples/schemas/*", "src/schemas/*", "debug/schemas/*", "generated/schemas/*", "internal/schemas/*", "global/schemas/*"],
      "@localization/*": ["examples/localization/*", "src/localization/*", "debug/localization/*", "generated/localization/*", "internal/localization/*", "global/localization/*"]
    }
  },
  "files": [
    "src/types.d.ts"
  ],
  "rootDirs": [
    "src",
    "debug",
    "generated",
    "internal",
    "global"
  ],
  "include": [
    "src/*",
    "debug/*",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
